{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts", 
    "src/**/*.vue", 
    "src/**/*.d.ts"
  ], 
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "slipLibCheck": true,

    "moduleResolution": "node",
    "importHelpers": true, 

    "strict": true, 

    "allowSyntheticDefaultImports": true, 
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }, 
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "types": ["node", "vite/client" ]
  }
}
